<group name="syscheck">
  <rule id="100003" level="8">
    <if_sid>550</if_sid>
    <field name="file">.py$</field>
    <field name="changed_fields">^permission$</field>
    <field name="perm" type="pcre2">\w\wx</field>
    <description>Execute permission added to python script.</description>
    <mitre>
      <id>T1222.002</id>
    </mitre>
  </rule>
</group>

<group name="filesystem">
        <rule id="100004" level="8">
          <if_sid>554</if_sid>
          <description>Executable file added to filesystem</description>
          <mitre>
                <id>T1204.002</id>
          </mitre>
          <field name="file" type="pcre2">.*\.(py|exe|sh)$</field>
        </rule>
</group>

